@page "/convert"

<PageTitle>Konvertering</PageTitle>

<div class="text-left">
    <h1>Konvertering</h1>

    <h3>meter till fot</h3>
    <div>
        <label for="meters">Ange antal meter:</label>
        <input type="number" id="meters" @bind="meterValue" />
        <button @onclick="ConvertMeterToFeet">Konvertera</button>
        <p>Resultat: @resultMeterToFeet fot</p>
    </div>


    <h3>km/h till miles/hour</h3>
    <div>
        <label for="kmPerHour">Ange km/h:</label>
        <input type="number" id="kmPerHour" @bind="kmPerHourValue" />
        <button @onclick="ConvertKmToMiles">Konvertera</button>
        <p>Resultat: @resultKmToMiles miles/hour</p>
    </div>
</div>

@code {
    private double meterValue;
    private double resultMeterToFeet;

    private double kmPerHourValue;
    private int resultKmToMiles;

    private void ConvertMeterToFeet()
    {
        // Konvertera meter till fot
        resultMeterToFeet = Math.Round(meterValue * 3.28084, 2);
    }

    private void ConvertKmToMiles()
    {
        // Konvertera km/h till miles/hour
        resultKmToMiles = (int)Math.Round(kmPerHourValue / 1.60934, 0);
    }
}
